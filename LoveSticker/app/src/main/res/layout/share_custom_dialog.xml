<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_dialog_button_layout_round"
    android:orientation="vertical"
    android:padding="@dimen/custom_share_dialod_layout_padding">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">


        <TextView
            android:id="@+id/textView2"
            android:text="Share"
            android:textSize="@dimen/custom_share_dialod_tital_text_size"
            android:textColor="@android:color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgFB"
            android:layout_width="@dimen/custom_share_dialod_image_width"
            android:layout_height="@dimen/custom_share_dialod_image_height"
            android:layout_margin="@dimen/custom_share_dialod_image_margin"
            android:src="@drawable/ic_facebook"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Facebook"
            android:textSize="@dimen/custom_share_dialod_text_size"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgTwitter"
            android:layout_width="@dimen/custom_share_dialod_image_width"
            android:layout_height="@dimen/custom_share_dialod_image_height"
            android:layout_margin="@dimen/custom_share_dialod_image_margin"
            android:src="@drawable/ic_twitter"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Twitter"
            android:textSize="@dimen/custom_share_dialod_text_size"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/black"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgWhatsapp"
            android:layout_width="@dimen/custom_share_dialod_image_width"
            android:layout_height="@dimen/custom_share_dialod_image_height"
            android:layout_margin="@dimen/custom_share_dialod_image_margin"
            android:src="@drawable/ic_whatsapp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Whatsapp"
            android:textSize="@dimen/custom_share_dialod_text_size"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgMail"
            android:layout_width="@dimen/custom_share_dialod_image_width"
            android:layout_height="@dimen/custom_share_dialod_image_height"
            android:layout_margin="@dimen/custom_share_dialod_image_margin"
            android:textSize="@dimen/custom_share_dialod_text_size"
            android:src="@drawable/ic_gmail"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Mail"
            android:textSize="@dimen/custom_share_dialod_text_size"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/black"/>

    </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btnShareCancel"
            android:text="Cancel"
            android:textSize="@dimen/custom_share_dialod_tital_text_size"
            android:textColor="@color/light_bule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false" />

    </RelativeLayout>


    </LinearLayout>